---
import MainLayout from '../layouts/MainLayout.astro';
import AnimeCard from '../components/AnimeCard.jsx';
import AnimeGrid from '../components/AnimeGrid.jsx';
import AnimeSearch from '../components/AnimeSearch.jsx';
import { animeService, FALLBACK_ANIME } from '../services/anime.js';
import { Play, Info, Sparkles, Film } from 'lucide-react';

let ongoingData = [];
let recommendedData = [];
let movieData = [];
let scheduleData = null;

try {
  const results = await Promise.allSettled([
    animeService.getOngoing(1),
    animeService.getRecommended(),
    animeService.getMovies(1),
    animeService.getSchedule()
  ]);

  ongoingData = results[0].status === 'fulfilled' && results[0].value ? results[0].value : FALLBACK_ANIME;
  recommendedData = results[1].status === 'fulfilled' && results[1].value ? results[1].value : [];
  movieData = results[2].status === 'fulfilled' && results[2].value ? results[2].value : [];
  scheduleData = results[3].status === 'fulfilled' ? results[3].value : null;
} catch (e) {
  console.error('Error fetching anime data:', e);
  ongoingData = FALLBACK_ANIME;
}

const ensureArray = (data) => Array.isArray(data) ? data : (data?.data || []);
const ongoing = ensureArray(ongoingData);
const recommended = ensureArray(recommendedData);
const movies = ensureArray(movieData);

// SSR DEBUG LOGGING
console.log('--- ANIME SSR DEBUG ---');
console.log('Ongoing Data Raw:', ongoingData ? (Array.isArray(ongoingData) ? `Array(${ongoingData.length})` : typeof ongoingData) : 'null');
console.log('Ongoing Count:', ongoing.length);
if (ongoing.length === 0) console.warn('[SSR] Ongoing list is empty! Check parseResult in anime.js');

// Hero anime (first ongoing)
const heroAnime = ongoing.length > 0 ? ongoing[0] : null;
---

<MainLayout title="Anime">
  <div class="anime-container">
    {/* Hero Section - Box Style like TV Page */}
    {heroAnime && (
    <div class="hero-section">
      <div class="hero-content">
        <span class="hero-badge">
          <Sparkles size={14} />
          ONGOING ANIME
        </span>
        <h1 class="hero-title">{heroAnime.title || heroAnime.name}</h1>
        <p class="hero-description">
          {heroAnime.synopsis ? heroAnime.synopsis.slice(0, 180) + '...' : 'Tonton anime subtitle Indonesia terbaru dengan kualitas HD. Update setiap minggu!'}
        </p>
        
        <div class="hero-actions">
          <a href={`/anime/${heroAnime.slug || heroAnime.id}`} class="btn-primary">
            <Play size={20} fill="currentColor" />
            <span>Tonton Sekarang</span>
          </a>
        </div>
      </div>
      <div class="hero-image">
        <img src={heroAnime.poster || heroAnime.image} alt={heroAnime.title} />
      </div>
    </div>
    )}

    <div class="content-wrapper">
      {/* Search Section - High Visibility Placement */}
      <div class="search-section-fixed">
        <AnimeSearch client:load />
      </div>

      {ongoing.length > 0 && (
      <section class="horizontal-section">
        <div class="section-header">
          <div class="title-with-icon">
            <Sparkles size={24} color="#6366f1" />
            <h2 class="section-title">Sedang Tayang</h2>
          </div>
          <p class="section-subtitle">Anime ongoing terbaru minggu ini</p>
        </div>
        <div class="horizontal-scroll">
          {ongoing.slice(0, 10).map(anime => (
            <div class="horizontal-item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      {/* Recommended Section (New, for consistency with Drama) */}
      {recommended.length > 0 && (
      <section class="horizontal-section">
        <div class="section-header">
          <div class="title-with-icon">
             <Sparkles size={24} color="#6366f1" fill="#6366f1" />
             <h2 class="section-title">Pilihan Untukmu</h2>
          </div>
          <p class="section-subtitle">Rekomendasi anime terbaik yang wajib ditonton</p>
        </div>
        <div class="horizontal-scroll">
          {recommended.map(anime => (
            <div class="horizontal-item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      {/* Anime Movies Section (New, for consistency with Drama) */}
      {movies.length > 0 && (
      <section class="horizontal-section">
        <div class="section-header">
          <div class="title-with-icon">
             <Film size={24} color="#e11d48" fill="#e11d48" />
             <h2 class="section-title">Film Anime Populer</h2>
          </div>
          <p class="section-subtitle">Movie anime kualitas HD terbaik</p>
        </div>
        <div class="horizontal-scroll">
          {movies.slice(0, 10).map(anime => (
            <div class="horizontal-item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      {/* Ongoing Grid */}
      <AnimeGrid initialData={ongoing} title="Update Minggu Ini" type="ongoing" client:load />
    </div>
  </div>
</MainLayout>

<style>
  .anime-container {
    padding-top: 1rem;
    background: #0f1115;
  }

  /* Hero Styles - Box Style */
  .hero-section {
    background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%); /* Deep indigo for Anime */
    border-radius: 24px;
    padding: 3rem;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    gap: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(99, 102, 241, 0.15), transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    flex: 1;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-image {
    width: 240px;
    height: 360px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1;
    animation: fadeInRight 0.8s ease-out;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInRight {
    from { opacity: 0; transform: translateX(20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(99, 102, 241, 0.15);
    color: #a5b4fc;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 800;
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(99, 102, 241, 0.3);
  }

  .hero-title {
    font-family: 'Outfit', sans-serif;
    font-size: 3.5rem;
    font-weight: 900;
    color: white;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: #6366f1;
    color: white;
    padding: 1rem 2rem;
    border-radius: 14px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 25px rgba(99, 102, 241, 0.4);
    background: #4f46e5;
  }

  /* Content Wrapper Styles */
  .content-wrapper {
    padding: 0 0 5rem 0;
  }

  .search-section-fixed {
    margin-bottom: 3rem;
  }

  .horizontal-section {
    margin-bottom: 4rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .title-with-icon {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .section-title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
  }

  .section-subtitle {
    color: #94a3b8;
    font-size: 0.9375rem;
  }

  .horizontal-scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1.5rem;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
  }

  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }

  .horizontal-item {
    flex: 0 0 45%;
    scroll-snap-align: start;
  }

  @media (min-width: 768px) {
    .horizontal-item {
      flex: 0 0 30%;
    }
  }

  @media (min-width: 1024px) {
    .horizontal-item {
      flex: 0 0 20%;
    }
  }

  @media (max-width: 1024px) {
    .hero-section { padding: 2.5rem; gap: 2rem; }
    .hero-title { font-size: 2.5rem; }
  }

  @media (max-width: 768px) {
    .hero-section {
      flex-direction: column;
      text-align: center;
      padding: 2rem 1.5rem;
      gap: 2rem;
    }
    
    .hero-image {
      width: 180px;
      height: 270px;
      order: -1;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .hero-badge {
      margin-bottom: 1rem;
    }
    
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-description {
      font-size: 1rem;
      margin-bottom: 2rem;
    }
  }
</style>
