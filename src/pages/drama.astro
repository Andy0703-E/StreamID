---
import MainLayout from '../layouts/MainLayout.astro';
import DramaCard from '../components/DramaCard.jsx';
import VideoDramaCard from '../components/VideoDramaCard.jsx';
import DramaGrid from '../components/DramaGrid.jsx';
import DramaSearch from '../components/DramaSearch.jsx';
import { dramaService, FALLBACK_DRAMA } from '../services/drama.js';
import { Play, Flame } from 'lucide-react';

let trendingData = [];
let latestData = [];
let forYouData = [];
let randomData = [];

try {
  const results = await Promise.allSettled([
    dramaService.getTrending(1),
    dramaService.getLatest(1),
    dramaService.getForYou(),
    dramaService.getRandom()
  ]);

  trendingData = results[0].status === 'fulfilled' && results[0].value ? results[0].value : FALLBACK_DRAMA;
  latestData = results[1].status === 'fulfilled' && results[1].value ? results[1].value : FALLBACK_DRAMA;
  forYouData = results[2].status === 'fulfilled' && results[2].value ? results[2].value : FALLBACK_DRAMA;
  randomData = results[3].status === 'fulfilled' && results[3].value ? results[3].value : [];
} catch (e) {
  console.error('Error fetching drama data:', e);
  trendingData = FALLBACK_DRAMA;
  latestData = FALLBACK_DRAMA;
  forYouData = FALLBACK_DRAMA;
}

const ensureArray = (data) => Array.isArray(data) ? data : (data?.data || []);
const trending = ensureArray(trendingData);
const latest = ensureArray(latestData);
const forYou = ensureArray(forYouData);
const random = ensureArray(randomData);

const heroDrama = trending[0];
---

<MainLayout title="Drama Box">
  <div class="drama-container">
    {heroDrama && (
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Drama Box</h1>
        <p class="hero__subtitle">Saksikan drama terbaru dan terpopuler dengan kualitas terbaik</p>
        <div class="hero__stats">
          <span>{trending.length} Judul Drama Terkini</span>
        </div>
        <a href={`/drama/${heroDrama.id || heroDrama.slug}`} class="hero__btn">
          <Play size={18} fill="currentColor" />
          <span>Tonton Tren</span>
        </a>
      </div>
      <div class="hero__image">
        <img src={heroDrama.poster || heroDrama.image} alt={heroDrama.title} />
      </div>
    </section>
    )}

      <DramaSearch client:load />

      <section class="section">
        <div class="section__header">
          <h2 class="section__title">Pilihan Untukmu</h2>
        </div>
        <div class="horizontal-scroll">
          {forYou.map(drama => (
            <div class="horizontal-scroll__item">
              <DramaCard drama={drama} client:load />
            </div>
          ))}
        </div>
      </section>

      {random.length > 0 && (
        <section class="section">
          <div class="section__header">
            <div class="section__title-wrap">
              <Flame size={20} class="section__icon" />
              <h2 class="section__title">Trending Shorts</h2>
            </div>
            <p class="section__subtitle">Cuplikan drama paling viral hari ini</p>
          </div>
          <div class="horizontal-scroll horizontal-scroll--shorts">
            {random.map(drama => (
              <div class="horizontal-scroll__item horizontal-scroll__item--short">
                <VideoDramaCard drama={drama} client:load />
              </div>
            ))}
          </div>
        </section>
      )}

      <DramaGrid initialData={trending} title="Terpopuler Minggu Ini" type="trending" client:load />
      <DramaGrid initialData={latest} title="Update Terbaru" type="latest" client:load />
    </div>
  </div>
</MainLayout>

<style>
  .drama-container {
    padding-top: 1rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #4c0519 0%, #881337 100%);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2.5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  .hero__content {
    flex: 1;
    z-index: 1;
  }

  .hero__title {
    font-family: 'Outfit', sans-serif;
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin-bottom: 0.75rem;
  }

  .hero__subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    max-width: 450px;
  }

  .hero__stats {
    font-size: 0.8rem;
    color: #fb7185;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.75rem;
  }

  .hero__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #e11d48;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .hero__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(225, 29, 72, 0.35);
    background: #be123c;
  }

  .hero__image {
    width: 140px;
    height: 200px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1;
    flex-shrink: 0;
    background: rgba(0, 0, 0, 0.2);
  }

  .hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Removed drama-page__container styles to use standard padding from MainLayout */

  /* Section Styles */
  .section {
    margin-bottom: 3rem;
  }

  .section__header {
    margin-bottom: 1.5rem;
  }

  .section__title-wrap {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .section__icon {
    color: #e11d48;
  }

  .section__title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: white;
  }

  .section__subtitle {
    color: #94a3b8;
    font-size: 0.875rem;
  }

  /* Horizontal Scroll */
  .horizontal-scroll {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }

  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }

  .horizontal-scroll__item {
    flex: 0 0 140px;
    scroll-snap-align: center;
  }

  .horizontal-scroll__item--short {
    flex: 0 0 140px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero { padding: 1.75rem; gap: 1.5rem; }
    .hero__title { font-size: 2rem; }
    .hero__image { width: 120px; height: 170px; }
  }

  @media (max-width: 768px) {
    .drama-page__container {
      padding: 0 0 3rem 0;
    }

    .hero {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem;
      gap: 1rem;
    }

    .hero__title {
      font-size: 1.75rem;
    }

    .hero__subtitle {
      font-size: 0.875rem;
      margin-left: auto;
      margin-right: auto;
    }

    .hero__stats {
      font-size: 0.75rem;
    }

    .hero__image {
      width: 90px;
      height: 130px;
    }

    .section__title {
      font-size: 1.25rem;
    }

    .horizontal-scroll__item {
      flex: 0 0 110px;
    }

    .horizontal-scroll__item--short {
      flex: 0 0 110px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 1.25rem;
      border-radius: 16px;
    }

    .hero__title {
      font-size: 1.5rem;
    }

    .hero__subtitle {
      font-size: 0.8rem;
      -webkit-line-clamp: 2;
    }

    .hero__btn {
      padding: 0.625rem 1.25rem;
      font-size: 0.85rem;
    }

    .hero__image {
      width: 80px;
      height: 115px;
    }

    .section {
      margin-bottom: 2rem;
    }

    .section__title {
      font-size: 1.15rem;
    }

    .section__subtitle {
      font-size: 0.8rem;
    }

    .horizontal-scroll__item {
      flex: 0 0 90px;
    }

    .horizontal-scroll__item--short {
      flex: 0 0 90px;
    }
  }

  @media (min-width: 768px) {
    .horizontal-scroll__item {
      flex: 0 0 150px;
    }

    .horizontal-scroll__item--short {
      flex: 0 0 140px;
    }
  }

  @media (min-width: 1024px) {
    .horizontal-scroll__item {
      flex: 0 0 180px;
    }

    .horizontal-scroll__item--short {
      flex: 0 0 160px;
    }

    .section__title {
      font-size: 1.5rem;
    }
  }
</style>

