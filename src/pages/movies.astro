---
import { getChannels } from '../data/channels.js';
import MainLayout from '../layouts/MainLayout.astro';
import ChannelCard from '../components/ChannelCard.jsx';

const channels = await getChannels();

// Filter movie channels
const movieChannels = channels.filter(c =>
  /movie|cinema|film|hbo|netflix|disney|warner|hulu|imax|theater/i.test(c.name) ||
  /movie|cinema|film|hbo|netflix|disney|warner|hulu|imax|theater/i.test(c.group || '')
);

const featuredMovie = movieChannels.length > 0 ? movieChannels[0] : null;
---
<MainLayout title="Movies">
  <div class="movies-container">
    {featuredMovie && (
      <div class="hero-section">
        <div class="hero-content">
          <h1 class="hero-title">Film & Cinema</h1>
          <p class="hero-subtitle">Koleksi lengkap film dan acara cinema dari berbagai platform streaming</p>
          <div class="hero-stats">
            <span>{movieChannels.length} Film Tersedia</span>
          </div>
        </div>
        <div class="hero-image">
          <img src={featuredMovie.logo} alt={featuredMovie.name} />
        </div>
      </div>
    )}

    <section class="channels-section">
      <div class="section-header">
        <h2 class="section-title">Semua Film</h2>
        <p class="section-desc">Pilih film favorit Anda untuk ditonton</p>
      </div>

      {movieChannels.length > 0 ? (
        <div class="channel-grid">
          {movieChannels.map(channel => (
            <ChannelCard channel={channel} client:load />
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-icon">ðŸŽ¬</div>
          <h3>Tidak ada film tersedia</h3>
          <p>Film sedang dimuat atau tidak tersedia saat ini.</p>
        </div>
      )}
    </section>
  </div>
</MainLayout>

<style>
  .movies-container {
    padding-top: 1rem;
  }

  .hero-section {
    background: linear-gradient(135deg, #1a1d23 0%, #2a2d33 100%);
    border-radius: 24px;
    padding: 3rem;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    gap: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .hero-content {
    flex: 1;
  }

  .hero-title {
    font-family: 'Outfit', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: #94a3b8;
    margin-bottom: 1.5rem;
    max-width: 500px;
  }

  .hero-stats {
    font-size: 0.875rem;
    color: #e11d48;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .hero-image {
    width: 200px;
    height: 200px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 16px;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .channels-section {
    margin-bottom: 3rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: 'Outfit', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .section-desc {
    color: #94a3b8;
    font-size: 1rem;
  }

  .channel-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: #1a1d23;
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .empty-state h3 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    color: #94a3b8;
  }

  @media (max-width: 768px) {
    .hero-section {
      flex-direction: column;
      text-align: center;
      padding: 2rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-image {
      width: 150px;
      height: 150px;
    }

    .channel-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1rem;
    }
  }
</style>