---
import MainLayout from '../layouts/MainLayout.astro';
import AnimeCard from '../components/AnimeCard.jsx';
import AnimeGrid from '../components/AnimeGrid.jsx';
import AnimeSearch from '../components/AnimeSearch.jsx';
import { animeService, FALLBACK_ANIME } from '../services/anime.js';
import { Play, Sparkles, Film } from 'lucide-react';

let ongoingData = [];
let recommendedData = [];
let movieData = [];


try {
  const results = await Promise.allSettled([
    animeService.getOngoing(1),
    animeService.getRecommended(),
    animeService.getMovies(1),
    animeService.getSchedule()
  ]);

  ongoingData = results[0].status === 'fulfilled' && results[0].value && results[0].value.length > 0 ? results[0].value : FALLBACK_ANIME;
  recommendedData = results[1].status === 'fulfilled' && results[1].value && results[1].value.length > 0 ? results[1].value : [];
  movieData = results[2].status === 'fulfilled' && results[2].value && results[2].value.length > 0 ? results[2].value : [];

} catch (e) {
  console.error('Error fetching anime data:', e);
  ongoingData = FALLBACK_ANIME;
}

const ensureArray = (data: any) => Array.isArray(data) ? data : (data?.data || []);
const ongoing = ensureArray(ongoingData);
const recommended = ensureArray(recommendedData);
const movies = ensureArray(movieData);

const heroAnime = ongoing.length > 0 ? ongoing[0] : null;
---

<MainLayout title="Anime">
  <div class="anime-container">
    {heroAnime && (
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Streaming Anime</h1>
        <p class="hero__subtitle">Koleksi anime subtitle Indonesia terbaru dengan kualitas HD</p>
        <div class="hero__stats">
          <span>{ongoing.length} Judul Anime Terkini</span>
        </div>
        <a href={`/anime/${heroAnime.slug || heroAnime.id}`} class="hero__btn">
          <Play size={18} fill="currentColor" />
          <span>Tonton Terakhir Tayang</span>
        </a>
      </div>
      <div class="hero__image">
        <img src="/logo.png" alt="Streaming Anime" style="object-fit: contain; padding: 10px;" />
      </div>
    </section>
    )}

      <AnimeSearch client:load />

      {ongoing.length > 0 && (
      <section class="section">
        <div class="section__header">
          <div class="section__title-wrap">
            <Sparkles size={20} className="section__icon" />
            <h2 class="section__title">Sedang Tayang</h2>
          </div>
          <p class="section__subtitle">Anime ongoing terbaru minggu ini</p>
        </div>
        <div class="horizontal-scroll">
          {ongoing.slice(0, 10).map((anime: any) => (
            <div class="horizontal-scroll__item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      {recommended.length > 0 && (
      <section class="section">
        <div class="section__header">
          <div class="section__title-wrap">
            <Sparkles size={20} className="section__icon" />
            <h2 class="section__title">Pilihan Untukmu</h2>
          </div>
          <p class="section__subtitle">Rekomendasi anime terbaik yang wajib ditonton</p>
        </div>
        <div class="horizontal-scroll">
          {recommended.map((anime: any) => (
            <div class="horizontal-scroll__item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      {movies.length > 0 && (
      <section class="section">
        <div class="section__header">
          <div class="section__title-wrap">
            <Film size={20} className="section__icon section__icon--movie" />
            <h2 class="section__title">Film Anime Populer</h2>
          </div>
          <p class="section__subtitle">Movie anime kualitas HD terbaik</p>
        </div>
        <div class="horizontal-scroll">
          {movies.slice(0, 10).map((anime: any) => (
            <div class="horizontal-scroll__item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      <AnimeGrid initialData={ongoing} title="Update Minggu Ini" type="ongoing" client:load />
    </div>
  </div>
</MainLayout>

<style>
  .anime-container {
    padding-top: 1rem;
  }

  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%);
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2.5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 35%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(99, 102, 241, 0.12), transparent 70%);
    pointer-events: none;
  }

  .hero__content {
    flex: 1;
    z-index: 1;
  }

  .hero__title {
    font-family: 'Outfit', sans-serif;
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin-bottom: 0.75rem;
  }

  .hero__subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    max-width: 450px;
  }

  .hero__stats {
    font-size: 0.8rem;
    color: #6366f1;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.75rem;
  }

  .hero__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #6366f1;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .hero__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(99, 102, 241, 0.35);
    background: #4f46e5;
  }

  .hero__image {
    width: 140px;
    height: 200px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1;
    flex-shrink: 0;
  }

  .hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Removed anime-page__container styles to use standard padding from MainLayout */

  /* Section Styles */
  .section {
    margin-bottom: 3rem;
  }

  .section__header {
    margin-bottom: 1.5rem;
  }

  .section__title-wrap {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .section__icon {
    color: #6366f1;
  }

  .section__icon--movie {
    color: #e11d48;
  }

  .section__title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: white;
  }

  .section__subtitle {
    color: #94a3b8;
    font-size: 0.875rem;
  }

  /* Horizontal Scroll */
  .horizontal-scroll {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }

  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }

  .horizontal-scroll__item {
    flex: 0 0 140px;
    scroll-snap-align: center;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero { padding: 1.75rem; gap: 1.5rem; }
    .hero__title { font-size: 2rem; }
    .hero__image { width: 120px; height: 170px; }
  }

  @media (max-width: 768px) {
    .anime-page__container {
      padding: 0 0 3rem 0;
    }

    .hero {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem;
      gap: 1rem;
    }

    .hero__title {
      font-size: 1.75rem;
    }

    .hero__subtitle {
      font-size: 0.875rem;
      margin-left: auto;
      margin-right: auto;
    }

    .hero__stats {
      font-size: 0.75rem;
    }

    .hero__image {
      width: 100px;
      height: 145px;
    }

    .section__title {
      font-size: 1.25rem;
    }

    .horizontal-scroll__item {
      flex: 0 0 110px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 1.25rem;
      border-radius: 16px;
    }

    .hero__title {
      font-size: 1.5rem;
    }

    .hero__subtitle {
      font-size: 0.8rem;
      -webkit-line-clamp: 2;
    }

    .hero__btn {
      padding: 0.625rem 1.25rem;
      font-size: 0.85rem;
    }

    .hero__image {
      width: 80px;
      height: 115px;
    }

    .section {
      margin-bottom: 2rem;
    }

    .section__title {
      font-size: 1.15rem;
    }

    .section__subtitle {
      font-size: 0.8rem;
    }

    .horizontal-scroll__item {
      flex: 0 0 110px;
    }
  }

  @media (min-width: 768px) {
    .horizontal-scroll__item {
      flex: 0 0 150px;
    }
  }

  @media (min-width: 1024px) {
    .horizontal-scroll__item {
      flex: 0 0 180px;
    }

    .section__title {
      font-size: 1.5rem;
    }
  }
</style>

