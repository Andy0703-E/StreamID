---
import MainLayout from '../layouts/MainLayout.astro';
import DramaCard from '../components/DramaCard.jsx';
import VideoDramaCard from '../components/VideoDramaCard.jsx';
import DramaGrid from '../components/DramaGrid.jsx';
import DramaSearch from '../components/DramaSearch.jsx';
import { dramaService, FALLBACK_DRAMA } from '../services/drama.js';
import { Play, Info, Flame } from 'lucide-react';

let trendingData = [];
let latestData = [];
let forYouData = [];
let randomData = [];

try {
  const results = await Promise.allSettled([
    dramaService.getTrending(1),
    dramaService.getLatest(1),
    dramaService.getForYou(),
    dramaService.getRandom()
  ]);

  trendingData = results[0].status === 'fulfilled' && results[0].value ? results[0].value : FALLBACK_DRAMA;
  latestData = results[1].status === 'fulfilled' && results[1].value ? results[1].value : FALLBACK_DRAMA;
  forYouData = results[2].status === 'fulfilled' && results[2].value ? results[2].value : FALLBACK_DRAMA;
  randomData = results[3].status === 'fulfilled' && results[3].value ? results[3].value : [];
} catch (e) {
  console.error('Error fetching drama data:', e);
  trendingData = FALLBACK_DRAMA;
  latestData = FALLBACK_DRAMA;
  forYouData = FALLBACK_DRAMA;
}

const ensureArray = (data) => Array.isArray(data) ? data : (data?.data || []);
const trending = ensureArray(trendingData);
const latest = ensureArray(latestData);
const forYou = ensureArray(forYouData);
const random = ensureArray(randomData);

// Hero drama (first trending)
const heroDrama = trending[0];
---

<MainLayout title="Drama Box">
  <div class="drama-container">
    {/* Hero Section - Box Style like TV Page */}
    {heroDrama && (
    <div class="hero-section">
      <div class="hero-content">
        <span class="hero-badge">TRENDING SEKARANG</span>
        <h1 class="hero-title">{heroDrama.title || heroDrama.name}</h1>
        <p class="hero-description">
          {heroDrama.description ? heroDrama.description.slice(0, 150) + '...' : 'Saksikan drama terbaru dan terpopuler dengan kualitas terbaik.'}
        </p>
        
        <div class="hero-actions">
          <a href={`/drama/${heroDrama.id || heroDrama.slug}`} class="btn-primary">
            <Play size={20} fill="currentColor" />
            <span>Tonton Sekarang</span>
          </a>
        </div>
      </div>
      <div class="hero-image">
        <img src={heroDrama.poster || heroDrama.image} alt={heroDrama.title} />
      </div>
    </div>
    )}

    <div class="content-wrapper">
      {/* Search Section - Integrated Placement */}
      <div class="search-section-fixed">
        <DramaSearch client:load />
      </div>

      {/* For You Section */}
      <section class="horizontal-section">
        <div class="section-header">
          <h2 class="section-title">Pilihan Untukmu</h2>
        </div>
        <div class="horizontal-scroll">
          {forYou.map(drama => (
            <div class="horizontal-item">
              <DramaCard drama={drama} client:load />
            </div>
          ))}
        </div>
      </section>

      {/* Random Highlights Section */}
      {random.length > 0 && (
        <section class="horizontal-section">
          <div class="section-header featured-header">
            <div class="title-with-icon">
                <Flame size={24} color="#e11d48" fill="#e11d48" />
                <h2 class="section-title">ðŸ”¥ Trending Shorts</h2>
            </div>
            <p class="section-subtitle">Cuplikan drama paling viral hari ini</p>
          </div>
          <div class="horizontal-scroll shorts-scroll">
            {random.map(drama => (
              <div class="short-item">
                <VideoDramaCard drama={drama} client:load />
              </div>
            ))}
          </div>
        </section>
      )}

      {/* Trending Grid */}
      <DramaGrid initialData={trending} title="Terpopuler Minggu Ini" type="trending" client:load />

      {/* Latest Grid with Load More */}
      <DramaGrid initialData={latest} title="Update Terbaru" type="latest" client:load />
    </div>
  </div>
</MainLayout>

<style>
  .drama-container {
    padding-top: 1rem;
    background: #0f1115;
  }

  /* Hero Styles - Box Style */
  .hero-section {
    background: linear-gradient(135deg, #4c0519 0%, #881337 100%); /* Deep rose for Drama */
    border-radius: 24px;
    padding: 3rem;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    gap: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(225, 29, 72, 0.15), transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    flex: 1;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-image {
    width: 240px;
    height: 360px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1;
    animation: fadeInRight 0.8s ease-out;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInRight {
    from { opacity: 0; transform: translateX(20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    background: rgba(225, 29, 72, 0.15);
    color: #fb7185;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 800;
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(225, 29, 72, 0.3);
  }

  .hero-title {
    font-family: 'Outfit', sans-serif;
    font-size: 3.5rem;
    font-weight: 900;
    color: white;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: #e11d48;
    color: white;
    padding: 1rem 2rem;
    border-radius: 14px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 8px 20px rgba(225, 29, 72, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 25px rgba(225, 29, 72, 0.4);
    background: #be123c;
  }

  /* Content Wrapper Styles */
  .content-wrapper {
    padding: 0 0 5rem 0;
    max-width: 1600px;
    margin-left: auto;
    margin-right: auto;
  }

  .search-section-fixed {
    margin-bottom: 3rem;
  }

  .horizontal-section {
    margin-bottom: 4rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
  }

  .horizontal-scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1.5rem;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
  }

  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }

  .horizontal-item {
    flex: 0 0 100%;
    scroll-snap-align: center;
  }

  @media (min-width: 768px) {
    .horizontal-item {
      flex: 0 0 45%;
    }
  }

  @media (min-width: 1024px) {
    .horizontal-item {
      flex: 0 0 20%;
    }
  }

  .short-item {
    flex: 0 0 160px;
  }

  .title-with-icon {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .section-subtitle {
    color: #94a3b8;
    font-size: 0.9375rem;
  }

  @media (max-width: 1024px) {
    .hero-section { padding: 2.5rem; gap: 2rem; }
    .hero-title { font-size: 2.5rem; }
  }

  @media (max-width: 768px) {
    .hero-section {
      flex-direction: column;
      text-align: center;
      padding: 2rem 1.5rem;
      gap: 2rem;
    }
    
    .hero-image {
      width: 180px;
      height: 270px;
      order: -1;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .hero-badge {
      margin-bottom: 1rem;
    }
    
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-description {
      font-size: 1rem;
      margin-bottom: 2rem;
    }
  }
</style>
