---
import MainLayout from '../../layouts/MainLayout.astro';
import { BarChart3, Users, Eye, TrendingUp, Clock, Globe } from 'lucide-react';

// This is a client-side only page for now to keep it simple with the Supabase client
---

<MainLayout title="Admin Dashboard">
    <div class="admin-dashboard-wrapper">
        <div class="background-glow"></div>
        
        <div class="admin-dashboard-container">
            <header class="dashboard-header">
                <div class="header-left">
                    <h1 class="premium-title">Analytics <span>Dashboard</span></h1>
                    <p class="subtitle">Statistik real-time pengunjung StreamID</p>
                </div>
                <div class="header-right">
                    <div class="refresh-pill">
                        <div class="status-dot"></div>
                        <span id="last-updated">Updating...</span>
                    </div>
                </div>
            </header>

            <div id="stats-grid" class="stats-grid">
                <div class="stat-card glass views">
                    <div class="card-bg-gradient"></div>
                    <div class="stat-header">
                        <div class="stat-icon-box">
                            <Eye size={22} />
                        </div>
                        <span class="stat-label">Total Kunjungan</span>
                    </div>
                    <div class="stat-main">
                        <h2 id="total-views" class="stat-value">...</h2>
                        <div class="stat-badge">
                            <TrendingUp size={12} />
                            <span>+All Time</span>
                        </div>
                    </div>
                </div>

                <div class="stat-card glass visitors">
                    <div class="card-bg-gradient"></div>
                    <div class="stat-header">
                        <div class="stat-icon-box">
                            <Users size={22} />
                        </div>
                        <span class="stat-label">Unique Visitors</span>
                    </div>
                    <div class="stat-main">
                        <h2 id="unique-visitors" class="stat-value">...</h2>
                        <div class="stat-badge">
                            <Globe size={12} />
                            <span>Global</span>
                        </div>
                    </div>
                </div>

                <div class="stat-card glass today">
                    <div class="card-bg-gradient"></div>
                    <div class="stat-header">
                        <div class="stat-icon-box">
                            <Clock size={22} />
                        </div>
                        <span class="stat-label">Kunjungan Hari Ini</span>
                    </div>
                    <div class="stat-main">
                        <h2 id="today-views" class="stat-value">...</h2>
                        <div class="stat-badge live">
                            <span class="pulse-dot"></span>
                            <span>Live</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content-grid">
                <div class="main-chart-card glass">
                    <div class="card-header-premium">
                        <div class="title-with-icon">
                            <BarChart3 size={20} className="text-secondary" />
                            <h3>Halaman Terpopuler</h3>
                        </div>
                        <div class="header-actions">
                            <span class="view-all">Top 5 Pages</span>
                        </div>
                    </div>
                    <div id="top-pages-list" class="top-pages-container">
                        <div class="loading-state">
                            <div class="shimmer"></div>
                            <div class="shimmer"></div>
                            <div class="shimmer"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        import { supabase } from '../../lib/supabase';

        const checkAuth = () => {
            const isAuth = localStorage.getItem('streamid_admin_authenticated');
            if (isAuth !== 'true') {
                window.location.href = '/';
            }
        };

        const fetchStats = async () => {
            if (!supabase) return;

            try {
                // Total Views
                const { count: totalViews } = await supabase
                    .from('page_views')
                    .select('*', { count: 'exact', head: true });

                // Unique Visitors
                const { data: visitors } = await supabase
                    .from('page_views')
                    .select('visitor_id');
                const uniqueVisitors = new Set(visitors?.map(v => v.visitor_id)).size;

                // Today's Views
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                const { count: todayViews } = await supabase
                    .from('page_views')
                    .select('*', { count: 'exact', head: true })
                    .gte('created_at', today.toISOString());

                // Top Pages
                const { data: pageData } = await supabase
                    .from('page_views')
                    .select('path');

                const pageCounts = (pageData || []).reduce((acc: any, curr: any) => {
                    acc[curr.path] = (acc[curr.path] || 0) + 1;
                    return acc;
                }, {});

                const topPages = Object.entries(pageCounts)
                    .sort(([, a]: any, [, b]: any) => b - a)
                    .slice(0, 5);

                const maxCount = Math.max(...(Object.values(pageCounts) as number[]), 1);

                // Update UI
                const totalViewsEl = document.getElementById('total-views');
                const uniqueVisitorsEl = document.getElementById('unique-visitors');
                const todayViewsEl = document.getElementById('today-views');
                
                if (totalViewsEl) totalViewsEl.innerText = (totalViews || 0).toLocaleString();
                if (uniqueVisitorsEl) uniqueVisitorsEl.innerText = (uniqueVisitors || 0).toLocaleString();
                if (todayViewsEl) todayViewsEl.innerText = (todayViews || 0).toLocaleString();
                
                const lastUpdatedEl = document.getElementById('last-updated');
                if (lastUpdatedEl) lastUpdatedEl.innerText = 'Updated: ' + new Date().toLocaleTimeString();

                const topPagesList = document.getElementById('top-pages-list');
                if (topPagesList) {
                    topPagesList.innerHTML = topPages.map(([path, count]: [string, any], index) => {
                        const width = ((count as number) / maxCount) * 100;
                        return `
                            <div class="top-page-item animate-in" style="animation-delay: ${index * 100}ms">
                                <div class="item-info-row">
                                    <div class="path-group">
                                        <span class="rank">#${index + 1}</span>
                                        <span class="path-text">${path === '/' ? '/ (Beranda)' : path}</span>
                                    </div>
                                    <span class="count-text">${(count as number).toLocaleString()} <small>views</small></span>
                                </div>
                                <div class="progress-bar-bg">
                                    <div class="progress-bar-fill" style="width: ${width}%"></div>
                                </div>
                            </div>
                        `;
                    }).join('');
                }

            } catch (error) {
                console.error('Error fetching stats:', error);
            }
        };

        checkAuth();
        fetchStats();
        setInterval(fetchStats, 30000); 
    </script>

    <style>
        .admin-dashboard-wrapper {
            position: relative;
            min-height: 100vh;
            padding: 2rem 0;
            overflow: hidden;
        }

        .background-glow {
            position: absolute;
            top: -10%;
            right: -10%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(225, 29, 72, 0.08) 0%, transparent 70%);
            z-index: -1;
            pointer-events: none;
        }

        .admin-dashboard-container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        /* Header Styles */
        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 3.5rem;
        }

        .header-left {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .back-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #94a3b8;
            text-decoration: none;
            font-size: 0.8125rem;
            font-weight: 600;
            transition: all 0.2s;
        }

        .icon-circle {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.05);
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .back-link:hover {
            color: #e11d48;
        }

        .back-link:hover .icon-circle {
            background: rgba(225, 29, 72, 0.1);
            border-color: rgba(225, 29, 72, 0.2);
            transform: translateX(-3px);
        }

        .premium-title {
            font-family: 'Outfit', sans-serif;
            font-size: 2.75rem;
            font-weight: 800;
            margin: 0;
            line-height: 1;
            color: #fff;
        }

        .premium-title span {
            background: linear-gradient(to right, #e11d48, #fb7185);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .subtitle {
            color: #64748b;
            font-size: 1rem;
            margin: 0.25rem 0 0;
        }

        .refresh-pill {
            background: rgba(15, 17, 21, 0.6);
            backdrop-filter: blur(10px);
            padding: 0.6rem 1.25rem;
            border-radius: 99px;
            border: 1px solid rgba(255, 255, 255, 0.08);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #94a3b8;
            font-size: 0.8125rem;
            font-weight: 500;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #22c55e;
            border-radius: 50%;
            box-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .glass {
            background: rgba(26, 29, 35, 0.6);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .stat-card {
            position: relative;
            border-radius: 28px;
            padding: 1.75rem;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .stat-card:hover {
            transform: translateY(-8px);
            border-color: rgba(255, 255, 255, 0.15);
        }

        .card-bg-gradient {
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: radial-gradient(circle at top right, rgba(255, 255, 255, 0.03), transparent);
            pointer-events: none;
        }

        .stat-header {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .stat-icon-box {
            width: 48px;
            height: 48px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.05);
            color: #94a3b8;
            border: 1px solid rgba(255, 255, 255, 0.08);
        }

        .views .stat-icon-box { color: #3b82f6; background: rgba(59, 130, 246, 0.1); }
        .visitors .stat-icon-box { color: #a855f7; background: rgba(168, 85, 247, 0.1); }
        .today .stat-icon-box { color: #e11d48; background: rgba(225, 29, 72, 0.1); }

        .stat-label {
            color: #94a3b8;
            font-size: 0.875rem;
            font-weight: 600;
            letter-spacing: 0.02em;
        }

        .stat-main {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
        }

        .stat-value {
            font-family: 'Outfit', sans-serif;
            font-size: 2.75rem;
            font-weight: 800;
            color: #fff;
            margin: 0;
            line-height: 1;
        }

        .stat-badge {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.4rem 0.75rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 99px;
            font-size: 0.75rem;
            font-weight: 700;
            color: #94a3b8;
            margin-bottom: 0.2rem;
        }

        .stat-badge.live {
            color: #22c55e;
            background: rgba(34, 197, 94, 0.1);
        }

        .pulse-dot {
            width: 6px;
            height: 6px;
            background: #22c55e;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.5); opacity: 0.5; }
            100% { transform: scale(1); opacity: 1; }
        }

        /* Content Sections */
        .content-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .main-chart-card {
            border-radius: 32px;
            padding: 2.5rem;
        }

        .card-header-premium {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
        }

        .title-with-icon {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .title-with-icon h3 {
            font-family: 'Outfit', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: #fff;
            margin: 0;
        }

        .text-secondary { color: #64748b; }

        .view-all {
            font-size: 0.8125rem;
            color: #64748b;
            font-weight: 600;
            background: rgba(255, 255, 255, 0.03);
            padding: 0.4rem 1rem;
            border-radius: 8px;
        }

        .top-pages-container {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .top-page-item {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .item-info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .path-group {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .rank {
            font-family: 'Outfit', sans-serif;
            color: #e11d48;
            font-weight: 800;
            font-size: 1.125rem;
            min-width: 2rem;
        }

        .path-text {
            color: #e2e8f0;
            font-weight: 600;
            font-size: 0.9375rem;
        }

        .count-text {
            color: #fff;
            font-weight: 700;
            font-size: 1rem;
        }

        .count-text small {
            color: #64748b;
            font-weight: 500;
            font-size: 0.75rem;
            margin-left: 0.25rem;
        }

        .progress-bar-bg {
            width: 100%;
            height: 8px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-bar-fill {
            height: 100%;
            background: linear-gradient(to right, #e11d48, #fb7185);
            border-radius: 4px;
            transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Animations */
        @keyframes fadeInScale {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .animate-in {
            animation: fadeInScale 0.5s ease-out forwards;
        }

        /* Shimmer Loading */
        .loading-state {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .shimmer {
            height: 40px;
            background: linear-gradient(90deg, 
                rgba(255, 255, 255, 0.03) 25%, 
                rgba(255, 255, 255, 0.08) 50%, 
                rgba(255, 255, 255, 0.03) 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
            border-radius: 12px;
        }

        @keyframes shimmer {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }

        @media (max-width: 768px) {
            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 2rem;
            }
            .premium-title { font-size: 2.25rem; }
            .stat-value { font-size: 2.25rem; }
            .main-chart-card { padding: 1.5rem; }
        }
    </style>
</MainLayout>
