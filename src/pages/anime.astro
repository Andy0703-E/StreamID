---
import MainLayout from '../layouts/MainLayout.astro';
import AnimeCard from '../components/AnimeCard.jsx';
import AnimeGrid from '../components/AnimeGrid.jsx';
import AnimeSearch from '../components/AnimeSearch.jsx';
import { animeService, FALLBACK_ANIME } from '../services/anime.js';
import { Play, Info, Sparkles, Film } from 'lucide-react';

let ongoingData = [];
let scheduleData = null;

try {
  const results = await Promise.allSettled([
    animeService.getOngoing(1),
    animeService.getSchedule()
  ]);

  ongoingData = results[0].status === 'fulfilled' && results[0].value ? results[0].value : FALLBACK_ANIME;
  scheduleData = results[1].status === 'fulfilled' ? results[1].value : null;
} catch (e) {
  console.error('Error fetching anime data:', e);
  ongoingData = FALLBACK_ANIME;
}

const ensureArray = (data) => Array.isArray(data) ? data : (data?.data || []);
const ongoing = ensureArray(ongoingData);

// SSR DEBUG LOGGING
console.log('--- ANIME SSR DEBUG ---');
console.log('Ongoing Data Raw:', ongoingData ? (Array.isArray(ongoingData) ? `Array(${ongoingData.length})` : typeof ongoingData) : 'null');
console.log('Ongoing Count:', ongoing.length);
if (ongoing.length === 0) console.warn('[SSR] Ongoing list is empty! Check parseResult in anime.js');

// Hero anime (first ongoing)
const heroAnime = ongoing.length > 0 ? ongoing[0] : null;
---

<MainLayout title="Anime">
  <div class="anime-container">
    {/* Hero Section */}
    {heroAnime && (
    <section class="hero-section">
      <div class="hero-backdrop">
        <img src={heroAnime.poster || heroAnime.image} alt="" />
        <div class="hero-overlay"></div>
      </div>
      
      <div class="hero-content">
        <span class="hero-badge">
          <Sparkles size={14} />
          ONGOING ANIME
        </span>
        <h1 class="hero-title">{heroAnime.title || heroAnime.name}</h1>
        <p class="hero-description">
          {heroAnime.synopsis ? heroAnime.synopsis.slice(0, 180) + '...' : 'Tonton anime subtitle Indonesia terbaru dengan kualitas HD. Update setiap minggu!'}
        </p>
        
        <div class="hero-actions">
          <a href={`/anime/${heroAnime.slug || heroAnime.id}`} class="btn-primary">
            <Play size={20} fill="currentColor" />
            <span>Tonton Sekarang</span>
          </a>
        </div>
      </div>
    </section>
    )}

    <div class={`content-wrapper ${!heroAnime ? 'no-hero' : ''}`}>
      {/* Search Section - High Visibility Placement */}
      <div class="search-section-fixed">
        <AnimeSearch client:load />
      </div>

      {ongoing.length > 0 && (
      <section class="horizontal-section">
        <div class="section-header">
          <div class="title-with-icon">
            <Sparkles size={24} color="#6366f1" />
            <h2 class="section-title">Sedang Tayang</h2>
          </div>
          <p class="section-subtitle">Anime ongoing terbaru minggu ini</p>
        </div>
        <div class="horizontal-scroll">
          {ongoing.slice(0, 10).map(anime => (
            <div class="horizontal-item">
              <AnimeCard anime={anime} client:load />
            </div>
          ))}
        </div>
      </section>
      )}

      {/* Ongoing Grid */}
      <AnimeGrid initialData={ongoing} title="Anime Ongoing" type="ongoing" client:load />
    </div>
  </div>
</MainLayout>

<style>
  .anime-container {
    margin: -2rem -2rem 0 -2rem;
    background: #0f1115;
  }

  /* Hero Styles */
  .hero-section {
    position: relative;
    height: 80vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    padding: 0 5%;
    overflow: hidden;
  }

  .hero-backdrop {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-backdrop img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 20%;
    filter: brightness(0.4) saturate(1.2);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, #0f1115 25%, transparent 75%),
                linear-gradient(to top, #0f1115 10%, transparent 40%);
  }

  .hero-content {
    max-width: 800px;
    z-index: 1;
    animation: fadeInUp 1s ease-out;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(99, 102, 241, 0.15);
    color: #a5b4fc;
    padding: 0.5rem 1.25rem;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 800;
    letter-spacing: 2px;
    margin-bottom: 2rem;
    border: 1px solid rgba(99, 102, 241, 0.3);
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-family: 'Outfit', sans-serif;
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 900;
    color: white;
    line-height: 1;
    margin-bottom: 2rem;
    text-shadow: 0 10px 30px rgba(0,0,0,0.5);
    letter-spacing: -1px;
  }

  .hero-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 3rem;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: #6366f1;
    color: white;
    padding: 1.25rem 2.5rem;
    border-radius: 18px;
    font-weight: 800;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
    font-size: 1.125rem;
  }

  .btn-primary:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.5);
  }

  .btn-secondary {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    padding: 1.25rem 2.5rem;
    border-radius: 18px;
    font-weight: 800;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.125rem;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-5px);
    border-color: rgba(255, 255, 255, 0.2);
  }

  /* Content Wrapper Styles */
  .content-wrapper {
    padding: 0 5% 5rem 5%;
    margin-top: -8rem;
    position: relative;
    z-index: 2;
    max-width: 1600px;
    margin-left: auto;
    margin-right: auto;
    transition: margin-top 0.3s ease;
  }

  .content-wrapper.no-hero {
    margin-top: 2rem;
  }

  .search-section-fixed {
    margin-bottom: 2rem;
    position: relative;
    z-index: 100;
  }

  .horizontal-section {
    margin-bottom: 4rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .title-with-icon {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .section-title {
    font-family: 'Outfit', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
  }

  .section-subtitle {
    color: #64748b;
    font-size: 0.9375rem;
  }

  .horizontal-scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1.5rem;
    scrollbar-width: none;
    scroll-snap-type: x mandatory;
  }

  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }

  .horizontal-item {
    flex: 0 0 45%;
    scroll-snap-align: start;
  }

  @media (min-width: 768px) {
    .horizontal-item {
      flex: 0 0 30%;
    }
  }

  @media (min-width: 1024px) {
    .horizontal-item {
      flex: 0 0 23%;
    }
  }

  @media (max-width: 1024px) {
    .hero-section { padding: 0 2rem; }
    .content-wrapper { padding: 2rem; }
  }

  @media (max-width: 768px) {
    .hero-section { height: 70vh; align-items: flex-end; padding-bottom: 4rem; }
    .hero-title { font-size: 2.5rem; }
    .hero-description { font-size: 1rem; }
    .hero-actions { flex-direction: column; }
    .btn-primary, .btn-secondary { justify-content: center; }
  }
</style>
